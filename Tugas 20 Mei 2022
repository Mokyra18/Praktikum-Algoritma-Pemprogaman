//Program while menurunkan nilai deret dengan batas
#include <iostream>
using namespace std;

int main(){
     int deret;
     cout<<"============================="<<endl;
     cout<<" Program Deret Angka (While) "<<endl;
     cout<<"=============================\n\n";
     cout<<"Masukan deret Angka yang akan ditampilkan : ";
     cin>>deret;
     cout<<endl;

     while(deret>0 && deret<100){
          cout<<deret<<"  ";
          deret--; 
     }

     cout<<"\n\n== Deret Selesai Ditampilkan ==\n";

     return 0;
}


//Program do while Menentukan bilangan genap atau ganjil 1-100
#include <iostream>
using namespace std;

int main(){
    int bil;
    int i;
    do {
    cout<<"== Program Menentukan Bilangan Ganjil Atau genap ==\n";
    cout<<" Masukan Bilangan (1-100) = ";
    cin>>bil;
    
    if (bil<=100){
        if (bil%2==0){
            cout<<" Bilangan "<<bil<<" Adalah Genap\n";
            i = 0;
        }else{
            cout<<" Bilangan "<<bil<<" Adalah Ganjil\n";
            i = 0;
        }
    }
    }
    while (bil>100);
    if (i!=0){
        cout<< "Maaf Angka Diluar Batas Maksimum! \n";
    }
    return 0;
}
